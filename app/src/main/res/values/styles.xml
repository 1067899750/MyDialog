<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopWindowstyle">
        <item name="android:windowEnterAnimation">@anim/showanim</item>
        <item name="android:windowExitAnimation">@anim/dismissanim</item>
    </style>

    <!--MortgageViewBtn属性-->
    <declare-styleable name="NumKeyView">
        <attr name="btnBackgBackground" format="color|reference"></attr>
        <attr name="btnTextColor" format="color|reference"></attr>
        <attr name="btnTextSize" format="dimension"></attr>
        <attr name="btnLeftText" format="string"></attr>
        <attr name="btnRightText" format="string"></attr>
    </declare-styleable>


    <style name="Area_Picker_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>


    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--是否除去边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="RbClearRipple">
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
    </style>

    <style name="PickerAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <!--弹窗动画-->
    <style name="RemarkStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/remark_show_anim</item>
        <item name="android:windowExitAnimation">@anim/remark_dismiss_anim</item>
    </style>

    <!--消除边距和黑边框-->
    <style name="ActionDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>


    <style name="RemarkDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>


    <declare-styleable name="SelectableTextView">
        <attr name="textJustify" format="boolean"/>
        <attr name="forbiddenActionMenu" format="boolean"/>
        <attr name="textHeightColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="VerticalTextView">
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="charSpacingExtra" format="dimension"/>
        <attr name="textLeftToRight" format="boolean"/>
        <attr name="underLineText" format="boolean"/>
        <attr name="underLineWidth" format="float"/>
        <attr name="underLineColor" format="color"/>
        <attr name="underlineOffset" format="dimension"/>
        <attr name="textHeightLightColor" format="color"/>
        <attr name="showActionMenu" format="boolean"/>
    </declare-styleable>
</resources>













