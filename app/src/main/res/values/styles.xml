<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopWindowstyle">
        <item name="android:windowEnterAnimation">@anim/showanim</item>
        <item name="android:windowExitAnimation">@anim/dismissanim</item>
    </style>

    <!--MortgageViewBtn属性-->
    <declare-styleable name="NumKeyView">
        <attr name="btnBackgBackground" format="color|reference"></attr>
        <attr name="btnTextColor" format="color|reference"></attr>
        <attr name="btnTextSize" format="dimension"></attr>
        <attr name="btnLeftText" format="string"></attr>
        <attr name="btnRightText" format="string"></attr>
    </declare-styleable>



    <style name="Area_Picker_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>


    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--是否除去边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>









</resources>













